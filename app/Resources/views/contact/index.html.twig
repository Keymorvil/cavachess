{% extends 'layout.html.twig' %}

{% block page_title %}<h1>Contact</h1>{% endblock %}
        
{% block content %}
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.email) }}
    {{ form_row(form.subject) }}
    {{ form_row(form.body) }}
    <div class="form-btn-group pull-right">
        <button type="submit" class="btn btn-primary">Envoyer</button>
    </div>
    {{ form_end(form) }}
{% endblock %}