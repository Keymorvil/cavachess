{% extends "base.html.twig" %}

{% block title %}Blog demo Symfony{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}
{% block body %}
    {% if is_granted('ROLE_ADMIN') %}{# si un utilisateur est connecté et qu'il a le rôle ROLE_ADMIN#}
        <nav class="navbar navbar-inverse navbar-admin">
            <div class="container">
                <a class="navbar-brand">
                    Menu Admin
                </a>
                <ul class="nav navbar-nav">
                    <li {% if app.request.get('_route') == 'app_admin_category_list' %}class="active"{% endif %}>
                        <a href="{{ path('app_admin_category_list') }}">
                            Gestion catégories
                        </a>
                    </li>
                    <li {% if app.request.get('_route') == 'app_admin_article_list' %}class="active"{% endif %}>
                        <a href="{{ path('app_admin_article_list') }}">
                            Gestion articles
                        </a>
                    </li>
                </ul>
            </div>
            
        </nav>
    {% endif %}
    <nav class="navbar navbar-default">
        <div class="container">
            <a class="navbar-brand" href="{{ path('homepage') }}">
                Blog
            </a>
            {# render(controller('AppBundle:Category:menu')) #}
            <ul class="nav navbar-nav navbar-right">
               {# {% if app.user is not null %}
                    <li>
                        <a>{{ app.user.username }}</a>
                    </li>
                    <li>
                        <a href="{{ path('logout') }}">
                            Déonnexion
                        </a>
                    </li>
                    
                {% else %}
                    <li {% if app.request.get('_route') == 'app_security_regiter' %}class="active"{% endif %}>
                        <a href="{{ path('app_security_register') }}">
                            Créer un compte
                        </a>
                    </li>
                    <li {% if app.request.get('_route') == 'connexion' %}class="active"{% endif %}>
                        <a href="{{ path('login') }}">
                            Connexion
                        </a>
                    </li>
                {% endif %}
                <li {% if app.request.get('_route') == 'app_contact_index' %}class="active"{% endif %}>
                    <a href="{{ path('app_contact_index') }}">Contact</a>
                </li>
                #}
            </ul>
        </div>
    </nav>
    <div class="container">
        {% for label, flashes in app.session.flashbag.all %}
            {% for flash in flashes %}
                {% if label == 'error' %}{% set label = 'danger' %}{% endif %}
                <div class="alert alert-{{ label }}">
                    {{ "now"|date("H:i:s") }}: {{ flash }}
                </div>
            {% endfor %}
        {% endfor %}
        {% block page_title %}{%endblock%}
        {% block content %}{% endblock %}
    </div>
    
{% endblock %}
{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
{% endblock %}